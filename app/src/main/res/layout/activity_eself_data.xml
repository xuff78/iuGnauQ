<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_title"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="33dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="姓名" />

            <TextView
                android:id="@+id/username"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/usernameBtn"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="必填" />

            <ImageView
                android:id="@+id/usernameBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="33dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="身份证号" />

            <TextView
                android:id="@+id/orderid"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/orderidBtn"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="必填" />

            <ImageView
                android:id="@+id/orderidBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headImageArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="头像" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/headimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/headimageBtn"
                android:scaleType="fitXY"
                fresco:placeholderImage="@mipmap/default_head_img"
                fresco:placeholderImageScaleType="fitXY">

            </com.facebook.drawee.view.SimpleDraweeView>

            <ImageView
                android:id="@+id/headimageBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nickNameArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="昵称" />

            <EditText
                android:id="@+id/nickname"
                style="@style/text_14_white"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/nicknameBtn"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="普通用户" />

            <ImageView
                android:id="@+id/nicknameBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/marriageArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="情感状况" />

            <TextView
                android:id="@+id/marriage"
                style="@style/text_14_white"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/sexBtn"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="未婚" />

            <ImageView
                android:id="@+id/sexBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/constellatoryArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="星座" />

            <TextView
                android:id="@+id/constellatory"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/constellatoryBtn"
                android:background="@null"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/constellatoryBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hobbyArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="爱好" />

            <EditText
                android:id="@+id/hobby"
                style="@style/text_14_white"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/hobbyBtn"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="暂无" />

            <ImageView
                android:id="@+id/hobbyBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/heightArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="身高" />

            <TextView
                android:id="@+id/height"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/heightBtn"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                android:id="@+id/heightBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/weightArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="体重" />

            <TextView
                android:id="@+id/weight"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/weightBtn"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                android:id="@+id/weightBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/incomeArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="收入" />

            <TextView
                android:id="@+id/income"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/incomeBtn"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="" />

            <ImageView
                android:id="@+id/incomeBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signArea"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="33dp"
            android:paddingRight="20dp">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="个人签名" />

            <EditText
                android:id="@+id/selfsign"
                style="@style/text_14_white"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/selfsignBtn"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="暂无" />

            <ImageView
                android:id="@+id/selfsignBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="33dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <TextView
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="个人说明" />

            <EditText
                android:id="@+id/selfdesc"
                style="@style/text_14_white"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/selfdescBtn"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text="暂无" />

            <ImageView
                android:id="@+id/selfdescBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>