<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_title"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_marginBottom="45dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:background="@color/trans_white_light"
        android:layout_height="45dip">
        <ImageView
            android:id="@+id/voiceInput"
            android:src="@mipmap/yy"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_width="33dip"
            android:layout_height="33dip" />
        <EditText
            android:layout_toRightOf="@+id/voiceInput"
            android:layout_toLeftOf="@+id/smallIcon"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:id="@+id/msgEdt"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="请输入"
            android:textColor="@color/white"
            android:textColorHint="@color/hard_gray"
            android:background="@drawable/shape_edit_corner"
            android:layout_width="match_parent"
            android:layout_height="30dip" />
        <ImageView
            android:id="@+id/smallIcon"
            android:layout_toLeftOf="@+id/addMore"
            android:src="@mipmap/bq"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_width="33dip"
            android:layout_height="33dip" />
        <ImageView
            android:id="@+id/addMore"
            android:src="@mipmap/gd"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_width="33dip"
            android:layout_height="33dip" />
    </RelativeLayout>
</RelativeLayout>
