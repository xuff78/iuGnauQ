<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toLeftOf="@+id/createNew"
            android:background="@drawable/white_border_conner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leftBtn"
                style="@style/text_16_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_corner_button_seletor"
                android:gravity="center"
                android:text="吐槽"
                android:textColor="@color/press_white_to_black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/midBtn"
                style="@style/text_16_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/contact_button_seletor"
                android:gravity="center"
                android:text="约会"
                android:textColor="@color/press_white_to_black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/rightBtn"
                style="@style/text_16_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_corner_button_seletor"
                android:gravity="center"
                android:text="秘密"
                android:textColor="@color/press_white_to_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/createNew"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@mipmap/paizhao" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
