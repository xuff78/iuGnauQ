<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/headImage"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:roundedCornerRadius="5dp">

    </com.facebook.drawee.view.SimpleDraweeView>

    <RelativeLayout
        android:id="@+id/nameArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/headImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            style="@style/text_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical"
            android:text="暂无" />

        <TextView
            android:id="@+id/time"
            style="@style/text_15_7f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="下午12:57" />

    </RelativeLayout>

    <TextView
        android:id="@+id/msgNum"
        style="@style/text_15_7f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameArea"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/headImage"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="[25条]" />

    <TextView
        android:id="@+id/lastMsg"
        style="@style/text_15_7f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameArea"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/msgNum"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="下个周三见面吧，小宇告诉我们下个周有个非常重要的事情" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/title_text_color" />
</RelativeLayout>