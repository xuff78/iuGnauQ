<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_title"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="19dp"
            android:layout_toLeftOf="@+id/createNew"
            android:background="@drawable/white_border_conner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firend"
                style="@style/text_14_white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/left_corner_button_seletor"
                android:gravity="center"
                android:text="好友"
                android:textColor="@color/press_white_to_black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/group"
                style="@style/text_14_white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/contact_button_seletor"
                android:gravity="center"
                android:text="群组"
                android:textColor="@color/press_white_to_black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/attention"
                style="@style/text_14_white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/contact_button_seletor"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/press_white_to_black" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/fans"
                style="@style/text_14_white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/right_corner_button_seletor"
                android:gravity="center"
                android:text="粉丝"
                android:textColor="@color/press_white_to_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/createNew"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dip"
            android:src="@mipmap/icon_add" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_deep" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
