<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/trans_white_light" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="10dip"
        android:id="@+id/publishTxt"
        android:textSize="14sp"
        android:hint="写点什么描述约会内容"
        android:gravity="top|left"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@color/trans_white"
        android:layout_width="match_parent"
        android:layout_height="100dip" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/photoLayout"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dateLayout"
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                style="@style/text_16_white"
                android:layout_centerVertical="true"
                android:text="主题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/text_16_white"
                android:layout_centerVertical="true"
                android:text="亲友滑雪团"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                style="@style/text_16_white"
                android:layout_centerVertical="true"
                android:text="时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@mipmap/icon_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_width="10dip"
                android:layout_height="15dip" />
        </RelativeLayout>
        <View
            android:background="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                style="@style/text_16_white"
                android:layout_centerVertical="true"
                android:text="地点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="1px"/>
        <TextView
            style="@style/text_12_7f"
            android:layout_centerVertical="true"
            android:text="*请勿发表广告及色情等违法..."
            android:gravity="center"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:layout_height="40dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/roleSelectLayout"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                style="@style/text_16_white"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="角色选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/roleImg"
                android:background="@mipmap/xiaotouxiang2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_width="45dip"
                android:layout_height="45dip" />
            <View
                android:background="@color/black_deep"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/shareLayout"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                style="@style/text_16_white"
                android:layout_centerVertical="true"
                android:text="同步分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_toLeftOf="@+id/weiboShare"
                android:background="@mipmap/kongjian2"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:layout_width="30dip"
                android:layout_height="30dip" />
            <View
                android:id="@+id/weiboShare"
                android:background="@mipmap/weibo2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_width="30dip"
                android:layout_height="30dip" />
            <View
                android:background="@color/black_deep"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/copyLayout"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                android:gravity="center_vertical"
                android:drawablePadding="5dip"
                android:drawableLeft="@mipmap/lianjie"
                style="@style/text_16_7f"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="复制链接"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/black_deep"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
